{
  "compilerOptions": {
    "target": "es2016",                               // Target ECMAScript version
    "module": "commonjs",                             // Module system used
    "allowJs": true,                                  // Allow JavaScript files
    "checkJs": false,                                 // Optional: enable type checking for JS files
    "jsx": "react-jsx",                               // Enable JSX transformation for React
    "outDir": "./dist",                               // Output directory for compiled files
    "esModuleInterop": true,                          // Enable interop with CommonJS
    "forceConsistentCasingInFileNames": true,         // Enforce case sensitivity for imports
    "skipLibCheck": true,                             // Skip type checking for declaration files
    "strict": true                                    // Enable strict type checking options
  },
  "include": [
    "src/**/*.ts",                                    // Include all TypeScript files
    "src/**/*.tsx",                                   // Include all TSX files (React)
    "src/**/*.js"                                     // Include all JavaScript files
  ],
  "exclude": [
    "node_modules",                                   // Exclude node_modules from being compiled
    "**/*.test.ts",                                   // Optionally exclude test files
    "**/*.test.tsx"                                   // Optionally exclude test files
  ]
}
